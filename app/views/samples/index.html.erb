<div class="page-header">
  <%= link_to new_sample_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Sample
  <% end %>
  <h1>Listing samples</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Zipcode</th>
            <th>Street</th>
            <th>Number</th>
            <th>Neighborhood</th>
            <th>City</th>
            <th>State</th>
            <th>Complement</th>
            <th>Birthday</th>
            <th>Picture</th>
            <th>Cpf</th>
            <th>Rg</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @samples) do |sample| %>
            <td><%= sample.first_name %></td>
            <td><%= sample.last_name %></td>
            <td><%= sample.phone %></td>
            <td><%= sample.email %></td>
            <td><%= sample.zipcode %></td>
            <td><%= sample.street %></td>
            <td><%= sample.number %></td>
            <td><%= sample.neighborhood %></td>
            <td><%= sample.city %></td>
            <td><%= sample.state %></td>
            <td><%= sample.complement %></td>
            <td><%= sample.birthday %></td>
            <td><%= sample.picture %></td>
            <td><%= sample.cpf %></td>
            <td><%= sample.rg %></td>
            <td><%= link_to 'Show', sample %></td>
        <td><%= link_to 'Edit', edit_sample_path(sample) %></td>
        <td><%= link_to 'Destroy', sample, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
